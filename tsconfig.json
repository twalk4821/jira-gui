{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "outDir": "build",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitOnError": true
  },
  "include": [
    "src",
    "main.ts",
    "preload.ts",
    "index.html"
  ]
}